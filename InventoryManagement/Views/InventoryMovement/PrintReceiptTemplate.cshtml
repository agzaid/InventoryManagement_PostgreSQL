@model Application.Interfaces.Models.InvTransDto // استخدم الموديل الخاص بك هنا
@{
    Layout = null;
}

<!DOCTYPE html>
<html dir="rtl" lang="ar">
<head>
    <meta charset="utf-8" />
    <title>إذن استلام - @Model.TrNum</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 30px;
        }

        .print-header {
            display: flex;
            justify-content: space-between;
            border-bottom: 2px solid #333;
            padding-bottom: 10px;
        }

        .receipt-title {
            font-size: 24px;
            font-weight: bold;
            color: #1e40af;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: right;
        }

        th {
            background-color: #f2f2f2;
        }

        .footer {
            margin-top: 50px;
            display: flex;
            justify-content: space-between;
        }

        .sig-box {
            border-top: 1px solid #000;
            width: 200px;
            text-align: center;
            padding-top: 5px;
        }

        /* إخفاء زر الطباعة عند تنفيذ عملية الطباعة فعلياً */
        @@media print {
            .no-print {
                display: none;
            }

            body {
                padding: 0;
            }
        }
    </style>
</head>
<body>
    <button class="no-print" onclick="window.print()" style="padding: 10px 20px; background: #1e40af; color: white; border: none; cursor: pointer; border-radius: 5px; margin-bottom: 20px;">
        تأكيد الطباعة
    </button>

    <div class="print-header">
        <div>
            <div class="receipt-title">إذن استلام مخزني</div>
            <p>رقم المعاملة: <strong>@Model.TrNum</strong></p>
            <p>اسم المورد: <strong>@Model.StoreCode</strong></p>
        </div>
        <div style="text-align: left;">
            <p>التاريخ: @Model.TrDate2</p>
            <div style="width: 80px; height: 80px; border: 1px solid #ccc; display: inline-block;">Logo</div>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>اسم الصنف</th>
                <th>الكود</th>
                <th>الكمية</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ItemCode</td>
                <td>@Model.ItemPrice</td>
                <td>@Model.ItemQnt</td>
            </tr>
        </tbody>
    </table>

    <div class="footer">
        <div class="sig-box">توقيع المستلم</div>
        <div class="sig-box">توقيع أمين المخزن</div>
    </div>

    <script>
        // اختيارياً: فتح نافذة الطباعة تلقائياً عند تحميل الصفحة
        window.onload = function() {
            // window.print();
        };
    </script>
</body>
</html>